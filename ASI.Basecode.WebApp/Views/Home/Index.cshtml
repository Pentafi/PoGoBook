@using ASI.Basecode.Data.Models;
@model IEnumerable<ASI.Basecode.Data.Models.Book>

@{
    ViewData["Title"] = "Home Page";
}

@section styles {
    <link rel="stylesheet" href="~/css/dashboard.css" />
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Library</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Pogo Book</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("List", "Home", new {})" class="nav-link">All Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Browse</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4" style="background-color: lightpink; border-radius: 10px;">
        <h3 style="color:white; padding:12px; text-align: center; position: relative; z-index: 10;">Pokémarked Books</h3>
        <div style="overflow-x: auto; white-space: nowrap; padding-bottom: 10px;">
            <div class="row row-cols-1 row-cols-md-3 g-4" style="flex-wrap: nowrap;">

                @foreach (var book in Model.Take(4))
                {
                    <!-- Books -->
                    <div class="col" style="display: inline-block; width: 50%; vertical-align: top; margin-right: 15px;">
                        <div class="card h-100">
                            <img src="@book.ImageUrl" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@book.Name</h5>
                                <small class="text-muted">@book.Author</small>
                            </div>
                            <div class="card-footer">
                                <button style=" width: 100%; background-color: lightpink; color: white; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer; margin-top: 10px;"
                                        onclick="window.location.href = '@Url.Action("Details", "Home", new { id = book.Id })'">
                                    View Details
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Recommendation Section -->
    <div class="container mt-4">
        <h3 style=" padding-bottom:12px; text-align: center;">This Month's Most Poképular</h3>
        <div class="card mb-3" style="background-color: lightgrey; border-radius: 10px; overflow: hidden;">
            <div class="row g-0">
                <div class="col-md-4" style="padding: 0; overflow: hidden;">
                    <img src="@ViewBag.RecommendedBook.ImageUrl" class="card-img-top" alt="..." style="width: 100%; height: auto;">
                </div>
                <div class="col-md-8">
                    <div class="card-body" style="position: relative;">
                        <h1 class="card-title">@ViewBag.RecommendedBook.Name</h1>
                        <p class="card-text"><h5 class="text-muted">★ ★ ★ ★ ☆</h5></p>
                        <p class="card-text">@ViewBag.RecommendedBook.Description</p>
                    </div>
                    <div class="card-footer" style="position: absolute; bottom: 0; width: 100%; text-align: center; padding: 10px 20px;">
                        <button style="background-color: lightpink; color: white; border: none; padding: 10px 20px; border-radius: 5px; width: 100%; cursor: pointer;"
                                onclick="window.location.href = '@Url.Action("Details", "Home", new { id = ViewBag.RecommendedBook.Id })'">
                            Read Book
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.bundle.min.js"></script>
</body>
</html>




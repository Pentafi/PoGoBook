@model IEnumerable<ASI.Basecode.Data.Models.Book>

@{
    ViewData["Title"] = "All Books";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" rel="stylesheet">
    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        #wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100%;
        }

        #content {
            flex: 1;
            padding: 20px;
        }
    </style>
</head>
<body>

<div id="wrapper">
<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Pogo Book</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Home", new {})">Home</a>
                </li>
                <li class="nav-item">
                    <a href="@Url.Action("List", "Home", new {})" class="nav-link active" aria-current="page">All Books</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Browse</a>
                </li>
            </ul>
            <form class="d-flex ml-auto">
                <input class="form-control me-3" type="search" placeholder="Search Books" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
    </div>
</nav>

<div class="container mt-4" style="background: lightpink; padding: 20px; border-radius: 10px;">
            <div class="row row-cols-md-3 g-4">

        @foreach (var book in Model)
        {
            <div class="col">
                        <div class="card h-100">
                            <img src="@book.ImageUrl" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@book.Name</h5>
                                <small class="text-muted">@book.Author</small>
                            </div>
                            <div class="card-footer">
                                <button style=" width: 100%; background-color: lightpink; color: white; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer; margin-top: 10px;"
                                        onclick="window.location.href = '@Url.Action("Details", "Home", new { id = book.Id })'">
                                    View Details
                                </button>
                            </div>
                        </div>
            </div>
        }
    </div>
</div>
</div>
</body>
</html>